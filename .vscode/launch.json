{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: Discount.gRPC Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/Services/Discount/Discount.Grpc/Discount.Grpc.csproj"
        },
        {
            "name": "C#: Basket.API Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/Services/Basket/Basket.API/Basket.API.csproj"
        },
        {
            "name": "C#: Catalog.API Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj"
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Services/Discount/Discount.Grpc/bin/Debug/net9.0/Discount.Grpc.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Services/Discount/Discount.Grpc",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Basket.API Containers: .NET Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "Run Container",
            "netCore": {
                "appProject": "${workspaceFolder}/src/Services/Basket/Basket.API/Basket.API.csproj"
            }
        },
        {
            "name": "Discount.Grpc Containers: .NET Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "netCore",
            "netCore": {
                "appProject": "${workspaceFolder}/src/Services/Discount/Discount.Grpc/Discount.Grpc.csproj"
            }
        },
        {
            "name": "Catalog.API Containers: .NET Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/src/Services/Catalog/Catalog.API/Catalog.API.csproj"
            }
        }
    ],
    "compounds": [
        {
            "name": "All Project Containers: Container .NET Launch",
            "configurations": [
                "Basket.API Containers: .NET Launch",
                "Catalog.API Containers: .NET Launch",
                "Discount.Grpc Containers: .NET Launch"
            ],
            "stopAll": true
        },
        {
            "name": "Basket & Discount (LOCAL)",
            "configurations": [
                "C#: Discount.gRPC Debug",
                "C#: Basket.API Debug",
            ],
            "stopAll": true
        }
        
    ]
}